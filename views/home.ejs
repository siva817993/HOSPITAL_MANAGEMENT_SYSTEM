                    <td> <p id="task-Name"><%= i.email %></td>
                        <td><p id="password">:********</p></td>

            </tr>
          <% } %>
        </table>
        
<div  align = "center"><input type="submit" class="btn btn-danger" value="DELETE USERS">
      </div>></form>

      <form action="/delete-Admin" method="GET">
        <table class="table">
          <thead>
            <tr>
              <th>Select</th>
              <th>Admin_Name</th>
              <th>password</th>
            </tr>
          </thead>
          <% for(let i of adm) { %>
